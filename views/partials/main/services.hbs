    <div class="width100 grid ">
          <div class="main-page-mobile-slider">
            {{>main/mobile-slider}}
          </div>
            <div class="main-page-slider grid"> 
        
            {{>main/slider}}
            </div>
        
    </div>
    {{/if}}
    {{/if}}
   {{!-- {{#if listCategory}} --}}
    {{#each listCategory}}

 <div class="partservices grid">
    <div class="partservices__content content grid" data-ageservices="{{this.ageCategory}}">
        {{this.nameCategory}}
    </div>
</div>
